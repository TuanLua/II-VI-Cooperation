
@{
    ViewBag.Title = "ListSoWithDetailReview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>So Review Report</h3>
<div class="form-group row" style="text-align:right">
    <label class="col-md-4">Part<span style="color: red">*</span> : </label>
    <div class="col-md-4 ">
        @Html.DropDownList("Part", (IEnumerable<SelectListItem>)ViewBag.Part, new { @class = "form-control", id = "Part" })
    </div>
</div>
<div class="row" style="text-align:right">
    <div class="form-group">
        <div class="row" style="margin-left:0px !important; margin-right:0px !important;">
            <label class="col-md-4">SO No<span style="color: red">*</span> : </label>
            <div class="col-md-4">
                @Html.DropDownList("SoNo", (IEnumerable<SelectListItem>)ViewBag.SoNo, new { @class = "form-control", id = "SoNo" })
            </div>
        </div>
    </div>
</div>
<div class="row" style="text-align:right">
    <div class="form-group">
        <div class="row" style="margin-left:0px !important; margin-right:0px !important;">
            <label class="col-md-4">From<span style="color: red">*</span> : </label>
            <div class="col-md-4">
                <div class="input-group date" data-provide="datepicker" data-date-format="dd-M-yy">
                    <input class="form-control" id="datePickerSta" />
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row" style="margin-left:0px !important; margin-right:0px !important;">
            <label class="col-md-4">To<span style="color: red">*</span> : </label>
            <div class="col-md-4">
                <div class="input-group date" data-provide="datepicker" data-date-format="dd-M-yy">
                    <input class="form-control" id="datePickerTo" />
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group col-md-12" style="text-align:center">
        <button class="btn btn-sm btn-success" id="submit">View Data</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#Part").select2();
        $("#SoNo").select2();
        $('.date').datepicker({ autoclose: true });
    });
</script>